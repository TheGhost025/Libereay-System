@model EditProfileViewModel

<h2 class="fade-in">Edit Profile</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success fade-in">@TempData["SuccessMessage"]</div>
}

<form asp-action="EditProfile" asp-controller="Admin" method="post" class="fade-in">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-animated">Save Changes</button>
</form>
