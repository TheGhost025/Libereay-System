@model Libereay_System.Models.LoginViewModel

@{
    ViewData["Title"] = "LogIn";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card animate-card">
            <div class="card-header bg-primary text-white">
                <h4 class="animate-header">Login</h4>
            </div>
            <div class="card-body">
                <form asp-action="Login">
                    <!-- Error Summary -->
                    <div class="mb-3">
                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                            </div>
                        }
                    </div>
                    <div class="mb-3 animate-input">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control input-animate" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3 animate-input">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control input-animate" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3 form-check animate-input">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 animate-button">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script>
        // Animate card entrance
        gsap.from(".animate-card", { duration: 1, y: 50, opacity: 0, ease: "power1.out" });

        // Animate header
        gsap.from(".animate-header", { duration: 1.5, x: -50, opacity: 0, delay: 0.5, ease: "power1.out" });

        // Animate inputs
        gsap.from(".animate-input", { duration: 1, x: -100, opacity: 0, stagger: 0.2, delay: 0.5, ease: "power1.out" });

        // Animate button hover
        const registerButton = document.querySelector(".animate-button");
        registerButton.addEventListener("mouseover", () => {
            gsap.to(registerButton, { duration: 0.3, scale: 1.05, ease: "power1.out" });
        });
        registerButton.addEventListener("mouseout", () => {
            gsap.to(registerButton, { duration: 0.3, scale: 1, ease: "power1.out" });
        });
    </script>
}