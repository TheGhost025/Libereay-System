@model IEnumerable<Book>

<h2 class="fade-in-title-manage-books">Manage Books</h2>
<a href="@Url.Action("AddBook", "Book")" class="btn btn-primary mb-3 fade-in-element">Add New Book</a>

<table class="table table-striped fade-in-table-manage-books">
    <thead>
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>ISBN</th>
            <th>Available Copies</th>
            <th>Total Copies</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr class="fade-in-row">
                <td class="d-flex justify-content-center">
                    <!-- Display book image if it exists -->
                    @if (!string.IsNullOrEmpty(book.ImagePath))
                    {
                        <img src="@book.ImagePath" alt="Book Image" class="img-thumbnail" style="width: 50px; height: 75px; object-fit: cover;" />
                    }
                    else
                    {
                        <span class="text-muted">No image available</span>
                    }
                </td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Category</td>
                <td>@book.ISBN</td>
                <td>@book.AvailableCopies</td>
                <td>@book.TotalCopies</td>
                <td>
                    <a href="@Url.Action("BookDetails", "Book", new { id = book.Id })" class="btn btn-info btn-sm btn-animated">View Details</a>
                    <a href="@Url.Action("EditBook", "Book", new { id = book.Id })" class="btn btn-warning btn-sm btn-animated">Edit</a>
                    <a href="@Url.Action("DeleteBook", "Book", new { id = book.Id })" class="btn btn-danger btn-sm btn-animated">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
