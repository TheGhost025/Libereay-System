@model dynamic

<h2>Admin Dashboard</h2>
<div class="row">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5>Total Books</h5>
                <h3>@Model.TotalBooks</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning text-dark">
            <div class="card-body">
                <h5>Borrowed Books</h5>
                <h3>@Model.BorrowedBooks</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-danger text-white">
            <div class="card-body">
                <h5>Overdue Books</h5>
                <h3>@Model.OverdueBooks</h3>
            </div>
        </div>
    </div>
</div>
